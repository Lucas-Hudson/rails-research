<p id="notice"><%= notice %></p>
<section class="container">

  <div class="row mb-3">
    <div class="col text-center">
      <h1>Orgs</h1>
      <%= link_to "New Org", new_org_path %>
    </div>
  </div>

  <div class="row justify-content-center mb-3">
    <div class="col text-center">
      <%= bootstrap_form_tag url: "/search", method: :get do |f| %>
        <%= f.search_field :place, hide_label: true, value: params[:place] %>
        <div class=" row">
          <% @searchable_attribute_categories.each do |c| %>
            <div class="col text-left">
              <%= "#{c.name}: #{"(mandatory)" if c.mandatory}" %> <br>
              <%= collection_check_boxes(nil, :filters, c.searchable_attributes, :id, :name, include_hidden: false) do |b| %>
                <%= b.check_box checked: params[:filters]&.include?(b.object.id.to_s) %>
                <%= b.label %> <br>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="mb-3">
          <%= link_to "Clear", orgs_path %>
          <%= f.submit "Search", name: nil, class: "btn btn-primary ml-3" %>
        </div>
      <% end %>
    </div>
  </div>



  <div class="row justify-content-center">
    <div class="col">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <th scope="col">CAT 1</th>
          <th scope="col">CAT 2</th>
        </tr>
        </thead>
        <tbody>
        <% @orgs.each do |org| %>
          <tr>
            <td><%= org.id %></td>
            <td><%= org.name %></td>
            <td><%= org.searchable_attributes.where(searchable_attribute_category: @searchable_attribute_categories.find_by(name: "CAT 1")).pluck(:name).join(", ") %></td>
            <td><%= org.searchable_attributes.where(searchable_attribute_category: @searchable_attribute_categories.find_by(name: "CAT 2")).pluck(:name).join(", ") %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>



